class Solution {
public:
    int numOfWays(int n) {
        map<int,vector<int>> mp;
        mp[1]={5,6,8,9,10};
        mp[2]={5,7,8,9};
        mp[3]={5,6,9,10,12};
        mp[4]={6,10,11,12};

        mp[5]={1,2,3,11,12};
        mp[6]={1,3,4,11};
        mp[7]={2,9,10,12};
        mp[8]={1,2,10,11,12};

        mp[9]={1,2,3,7};
        mp[10]={1,3,4,7,8};
        mp[11]={4,5,6,8};
        mp[12]={3,4,5,7,8};

        //1 3 5 8 10 12
        //2 4 6 7 9 11
//        6*5+6*4
        int dp_5[5010];
        int dp_4[5010];
        dp_5[1]=6;
        dp_4[1]=6;
        for(int i=2;i<=n;i++)
        {
            dp_5[i]=(dp_5[i-1]*3+dp_4[i-1]*2)%(1000000000+7);
            dp_4[i]=(dp_5[i-1]*2+dp_4[i-1]*2)%(1000000000+7);
        }
        return (dp_5[n]+dp_4[n])%(1000000000+7);
    }
};
