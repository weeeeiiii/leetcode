class Solution {
public:
    bool canJump(vector<int>& nums) {
        if(nums.size()==1) return true;
        int distance=nums[0];
        int i=0;

        while(i+distance<nums.size()-1&&distance!=0)
        {
            int maxn=0;
            int length=i+distance;
            for(int j=i;j<=length;j++)
            {
                if(j+nums[j]>maxn)
                {
                    maxn=j+nums[j];
                    i=j;
                    distance=nums[j];
                }
            }
        }
        if(i+distance>=nums.size()-1) return true;
        return false;
    }
};
