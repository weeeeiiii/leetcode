#include <iostream>
#include <deque>
#include <string>
#include <map>
#include <vector>
#include <unordered_map>
#include <algorithm>

using namespace std;


struct TreeNode {
    int val;
    TreeNode *left;
    TreeNode *right;

    TreeNode(int x) : val(x), left(NULL), right(NULL) {}
};

class Solution {
public:
    TreeNode *lowestCommonAncestor(TreeNode *root, TreeNode *p, TreeNode *q) {
        while (true) {
            if (p->val < root->val && q->val < root->val)
                root=root->left;
            else if(p->val > root->val && q->val > root->val)
                root=root->right;
            else break;
        }
        return root;
    }
};
